<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-7 col-md-7">
      <div class="well well-sm">
        <div class="row">
          <div class="col-sm-6 col-md-4">
            <% if @user.image.blank? %>
              <%= image_tag "/uploads/default/default2.png", class: "img2"  %>
            <% else %>
              <%= image_tag @user.image_url(), class: "img2"  %>
            <%end%>
          </div>
          <div class="col-sm-10 col-md-8">
            <i class="glyphicon glyphicon-envelope namefont"><h4><b><%= @user.name.titleize %></b></h4></i>
            <p>
            <i class="glyphicon glyphicon-envelope"><%= @user.dob %></i>
            <br />
            <i class="glyphicon glyphicon-envelope"><%= @user.email %></i>
            <br />
            <i class="glyphicon glyphicon-gift"></i><%#= @user.body %></p>
            <i class="glyphicon glyphicon-gift"></i><%= link_to "Find Friends", friendships_path %></p>
          </div>
        </div>
      </div>
    </div>
  </div>
  <button type="button" class="btn btn-info" data-toggle="collapse" data-target="#demo"> friend request</button>
  <div class="row collapse" id="demo">
    <div class="col-xs-12 col-sm-7 col-md-7">
      <div class="well well-sm">
        <div class="row">
            <% @friends.each do |friend|%>
              <div class="panel panel-info">
                <div class="panel-body">
                  <div class="col-sm-6 col-md-5">
                    <% if friend.user.image.blank? %>
                      <%= image_tag "/uploads/default/default2.png", class: "img"  %>
                    <% else %>
                      <%= image_tag friend.user.image_url(), class: "img"  %>
                    <%end%>
                  </div>
                  <div class="col-sm-6 col-md-3">
                   <%= button_to "accept", friendship_path(id: friend.id, status: Friendship.statuses[:accept]),  :method => :put  %>
                   <%= button_to "reject", friendship_path(id: friend.id, status: Friendship.statuses[:reject]),  :method => :put  %>
                  </div>
                  <div class="col-sm-6 col-md-3">
                    <%= friend.user.name %><br>
                  </div>
                </div>
              </div>
            <%end%>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

